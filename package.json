{
    "name": "lsp-sample",
    "description": "A language server example",
    "author": "Microsoft Corporation",
    "license": "MIT",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/vscode-extension-samples"
    },
    "publisher": "vscode-samples",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:Mizar"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "commands": [
            {
                "category": "Mizar",
                "command": "verifier",
                "title": "Mizar Compile"
            },
            {
                "category": "Mizar",
                "command": "irrths",
                "title": "Irrelevant Theorems"
            },
            {
                "category": "Mizar",
                "command": "relinfer",
                "title": "Irrelevant Inferences"
            },
            {
                "category": "Mizar",
                "command": "trivdemo",
                "title": "Trivial Proofs"
            },
            {
                "category": "Mizar",
                "command": "reliters",
                "title": "Irrelevant Iterative Steps"
            },
            {
                "category": "Mizar",
                "command": "relprem",
                "title": "Irrelevant Premises"
            },
            {
                "category": "Mizar",
                "command": "irrvoc",
                "title": "Irrelevant Vocabularies"
            },
            {
                "category": "Mizar",
                "command": "inacc",
                "title": "Inaccessible Items"
            },
            {
                "category": "Mizar",
                "command": "chklab",
                "title": "Irrelevant Label"
            },
            {
                "category": "Mizar",
                "command": "stop-command",
                "title": "Stop Command"
            }
        ],
        "languages": [
            {
                "id": "Mizar",
                "aliases": [
                    "Mizar",
                    "Mizar"
                ],
                "extensions": [
                    ".miz"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "menus": {
            "editor/title/run": [
                {
                    "when": "resourceLangId == Mizar",
                    "command": "verifier",
                    "group": "1_run"
                },
                {
                    "when": "resourceLangId == Mizar",
                    "command": "stop-command"
                },
                {
                    "when": "resourceLangId == Mizar",
                    "command": "irrths",
                    "group": "Irrelevant Utilities"
                },
                {
                    "when": "resourceLangId == Mizar",
                    "command": "relinfer",
                    "group": "Irrelevant Utilities"
                },
                {
                    "when": "resourceLangId == Mizar",
                    "command": "trivdemo",
                    "group": "Irrelevant Utilities"
                },
                {
                    "when": "resourceLangId == Mizar",
                    "command": "reliters",
                    "group": "Irrelevant Utilities"
                },
                {
                    "when": "resourceLangId == Mizar",
                    "command": "relprem",
                    "group": "Irrelevant Utilities"
                },
                {
                    "when": "resourceLangId == Mizar",
                    "command": "irrvoc",
                    "group": "Irrelevant Utilities"
                },
                {
                    "when": "resourceLangId == Mizar",
                    "command": "inacc",
                    "group": "Irrelevant Utilities"
                },
                {
                    "when": "resourceLangId == Mizar",
                    "command": "chklab",
                    "group": "Irrelevant Utilities"
                }
            ]
        },
        "grammars": [
            {
                "language": "Mizar",
                "scopeName": "source.miz",
                "path": "./syntaxes/Mizar.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "verbose",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^8.2.2",
        "@types/node": "^12.12.0",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "mocha": "^8.3.2",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "carrier": "^0.3.0",
        "child_process": "^1.0.2",
        "readline": "^1.3.0",
        "vscode-uri": "^3.0.2"
    }
}
